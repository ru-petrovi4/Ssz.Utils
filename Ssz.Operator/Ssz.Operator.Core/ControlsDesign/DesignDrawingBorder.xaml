<Border x:Class="Ssz.Operator.Core.ControlsDesign.DesignDrawingBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controlsDesign="clr-namespace:Ssz.Operator.Core.ControlsDesign"
        Background="{DynamicResource CheckerBrush}">
    <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="{Binding Width}"
                    Height="{Binding Height}"
                    Template="{StaticResource DesignDrawingContentControlTemplate}">
        <controlsDesign:DesignDrawingCanvas x:Name="DesignDrawingCanvas" x:FieldModifier="public" />
    </ContentControl>
</Border>